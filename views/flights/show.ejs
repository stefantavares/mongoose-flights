<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>Mongoose Flights</title>
</head>
<body>
  <nav>
    <img src="https://i.imgur.com/x3KhUUD.png">
    <a href="/flights/new">ADD FLIGHT</a>
    <a href="/flights">ALL FLIGHTS</a>
  </nav>
<main>
  <section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight No: </div>
    <div><%= flight.flightNo %></div>
    <div>Departure: </div>
    <div><%= flight.departs %></div>
  </section>

  <br>
  <br>
  <h2>Destinations</h2>
  <form method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Destination:</label>
    <select name="airport">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label>Date:</label>
    <input type="date" name="arrival">
    <input type="submit" value="Add Destination">
  </form>
  <br>
  <br>

  <% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
           <th>Airport</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(f) { %>
          <tr>
            <td><%= f.airport %></td>
            <td><%= f.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destination Yet</h5>
  <% } %>
  